#!/bin/bash

mkdir -p ~/.vim
mkdir -p ~/.vim/autoload
mkdir -p ~/.vim/bundle
mkdir -p ~/.vim/colors
mkdir -p ~/.vim/swap

cp -uiv ./.bashrc ~/
cp -uiv ./.emacs ~/
cp -uiv ./.vimrc ~/
cp -uiv ./.gitconfig ~/
cp -uiv ./.vim/colors/minimalist.vim ~/.vim/colors/
cp -ruiv ./emacs-config ~/

cd ~/.vim/autoload
curl -LO "https://raw.githubusercontent.com/tpope/vim-pathogen/master/autoload/pathogen.vim"

cd ~/.vim/bundle
git clone https://github.com/scrooloose/nerdtree
git clone https://github.com/tpope/vim-sensible
