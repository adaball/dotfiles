#!/bin/bash

mkdir -p ~/.vim
mkdir -p ~/.vim/autoload
mkdir -p ~/.vim/bundle
mkdir -p ~/.vim/colors
mkdir -p ~/.vim/.swap
mkdir -p ~/.vim/.backup
mkdir -p ~/.vim/.undo
mkdir -p ~/.mintty/themes

cp -iv ./.bashrc ~/
cp -iv ./.emacs ~/
cp -iv ./.vimrc ~/
cp -iv ./.gitconfig ~/
cp -iv ./.tmux.conf ~/
cp -iv ./.mintty/themes/base16-brewer.minttyrc ~/.mintty/themes/

pushd ~/.vim/autoload
curl -LO "https://raw.githubusercontent.com/tpope/vim-pathogen/master/autoload/pathogen.vim"
popd

pushd ~/.vim/bundle
git clone git@github.com:guns/vim-clojure-static.git
git clone git@github.com:jwalton512/vim-blade.git
git clone git@github.com:pangloss/vim-javascript.git
git clone git@github.com:scrooloose/nerdtree.git
git clone git@github.com:tpope/vim-fireplace.git
git clone git@github.com:tpope/vim-sensible.git
git clone git@github.com:jpalardy/vim-slime.git
popd
